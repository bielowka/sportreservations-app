{{!-- Nagłówek z informacją o zalogowanym użytkowniku --}}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>Panel Super Admina</h1>
        <p class="text-muted">
            <i class="fas fa-user me-2"></i>Zalogowany jako: <strong>{{superAdminName}}</strong>
        </p>
    </div>
    <a href="/superadmin/logout" class="btn btn-outline-danger">
        <i class="fas fa-sign-out-alt me-2"></i>Wyloguj się
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Zarządzanie Użytkownikami</h5>
                <p class="card-text">Przeglądaj, edytuj i usuwaj konta użytkowników.</p>
                <a href="/superadmin/users" class="btn btn-primary">
                    <i class="fas fa-users me-2"></i>Przejdź do Użytkowników
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Zarządzanie Obiektami</h5>
                <p class="card-text">Zarządzaj wszystkimi obiektami sportowymi w systemie.</p>
                <a href="/superadmin/objects" class="btn btn-primary">
                    <i class="fas fa-building me-2"></i>Przejdź do Obiektów
                </a>
            </div>
        </div>
    </div>
</div>

{{!-- Statystyki systemu --}}
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-line me-2"></i>Statystyki Systemu
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="border rounded p-3 text-center">
                            <i class="fas fa-users fa-2x text-primary mb-2"></i>
                            <h3>{{usersCount}}</h3>
                            <p class="text-muted mb-0">Użytkownicy</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border rounded p-3 text-center">
                            <i class="fas fa-building fa-2x text-success mb-2"></i>
                            <h3>{{objectsCount}}</h3>
                            <p class="text-muted mb-0">Obiekty Sportowe</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border rounded p-3 text-center">
                            <i class="fas fa-calendar-check fa-2x text-info mb-2"></i>
                            <h3>{{reservationsCount}}</h3>
                            <p class="text-muted mb-0">Rezerwacje</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 